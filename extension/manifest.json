{
  "manifest_version": 3,
  "name": "ToolJump",
  "version": "1.0.0",
  "description": "Connect your tools together",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://github.com/*",
    "https://*.aws.amazon.com/*"
  ],
  "optional_host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "dist/popup-settings.html",
    "default_title": "ToolJump Settings"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
